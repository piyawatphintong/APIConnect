<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/btcText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalStartMargin"
        android:layout_marginTop="@dimen/normalTopMargin"
        android:text="@string/btc"
        android:textSize="@dimen/_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btcPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalStartMargin"
        android:text="@string/temp"
        android:textSize="@dimen/_20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btcText"
        app:layout_constraintStart_toEndOf="@+id/btcText"
        app:layout_constraintTop_toTopOf="@+id/btcText" />

    <TextView
        android:id="@+id/ethText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalStartMargin"
        android:layout_marginTop="@dimen/normalTopMargin"
        android:text="@string/eth"
        android:textSize="@dimen/_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btcText" />

    <TextView
        android:id="@+id/ethPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalStartMargin"
        android:text="@string/temp"
        android:textSize="@dimen/_20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ethText"
        app:layout_constraintStart_toEndOf="@+id/ethText"
        app:layout_constraintTop_toTopOf="@+id/ethText" />

    <TextView
        android:id="@+id/adaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalStartMargin"
        android:layout_marginTop="@dimen/normalTopMargin"
        android:text="@string/ada"
        android:textSize="@dimen/_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ethText" />

    <TextView
        android:id="@+id/adaPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalStartMargin"
        android:text="@string/temp"
        android:textSize="@dimen/_20sp"
        app:layout_constraintBottom_toBottomOf="@+id/adaText"
        app:layout_constraintStart_toEndOf="@+id/adaText"
        app:layout_constraintTop_toTopOf="@+id/adaText" />

    <Button
        android:id="@+id/reloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normalStartMargin"
        android:text="@string/reload"
        app:layout_constraintBottom_toBottomOf="@+id/adaPrice"
        app:layout_constraintStart_toEndOf="@+id/ethPrice"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>